@page
@model LoginModel

@using Library.Shared
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
	ViewData["Title"] = @SharedLocalizer["Login"];
}

<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-4">
		<section>
			<form id="account" method="post">
				<h4>@SharedLocalizer["LoginHeader"]</h4>
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Input.Email">@SharedLocalizer["Email"]</label>
					<input asp-for="Input.Email" class="form-control" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Input.Password">@SharedLocalizer["Password"]</label>
					<input asp-for="Input.Password" class="form-control" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary">@SharedLocalizer["LoginBtn"]</button>
				</div>
				<div class="form-group">					
					<p>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@SharedLocalizer["RegisterLink"]</a>
					</p>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
